/* components/dialog/dialog.wxss */
.weui-mask {
  background:rgba(0,0,0,.6);
  opacity:1;
  -webkit-transition-duration:.3s;
  transition-duration:.3s;
  visibility:visible;
  position:fixed;
  z-index:5000;
  top:0;
  right:0;
  left:0;
  bottom:0;
}
.wx-dialog{
  position: fixed;
  z-index: 5000;
  width: 80%;
  max-width: 300px;
  top: 40%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: #FFFFFF;
  text-align: center;
  border-radius: 3px;
  overflow: hidden;
}
.wx-dialog-title{
  font-size: 18px;
  padding: 15px 15px 0px;
}
.wx-dialog-content{
  /* padding: 10px 15px 10px; */
  padding:15rpx 40rpx 20rpx;
  min-height: 40px;
  font-size: 16px;
  line-height: 1.3;
  word-wrap: break-word;
  word-break: break-all;
  font-weight: normal;
  color: #999999;
}
.wx-dialog-footer{
  display: flex;
  align-items: center;
  position: relative;
  line-height: 45px;
  font-size: 17px;
}
.wx-dialog-footer::before{
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 1px solid #D5D5D6;
  color: #D5D5D6;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}
.wx-dialog-btn{
  display: block;
  -webkit-flex: 1;
  flex: 1;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
  position: relative;
}
.wx-dialog-footer .wx-dialog-btn-cancel{
  color: #353535;
}
.wx-dialog-footer .wx-dialog-btn-confirm{
  color: #3CC51F;
}
.wx-dialog-footer .wx-dialog-btn:nth-of-type(2):after{
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  width: 1px;
  bottom: 0;
  border-left: 1px solid #D5D5D6;
  color: #D5D5D6;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleX(0.5);
  transform: scaleX(0.5);
}