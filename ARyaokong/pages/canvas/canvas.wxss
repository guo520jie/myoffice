/* pages/canvas/canvas.wxss */
page{
height: 100%;
overflow: hidden;
}
/* 清除浮动 */
  .clearfix::after {
     content: ".";
     clear: both;
     display: block;
     overflow: hidden;
     font-size: 0;
     height: 0;
    }

.fl {
  float: left;
}
.fr {
  float: right;
}
.main{
  width: 100%;
  height: 100%;
  background-size: cover;
  display: flex;
 
}
.left {
  flex: 1;
  height: 100%;
  overflow: hidden;
  /* background-color: wheat; */
}
.right {
  flex: 4;
  height: 100%;
  /* overflow: hidden; */
}
.left .left-img-box {
  height: 100%;
  padding: 26rpx 0;
  /* display: flex;
  flex-direction:column; */
}
.left .left-img-box image {
  width: 100rpx;
  height: 94rpx;
  display: block;
}
.right image{
  display: block;
}

.right .top .back{
  margin-top: 14rpx;
  margin-left: 20rpx;
}
.middle canvas {
  /* margin-top: 109rpx; */
  background-color: #fff;
}
.right .bottom {
  margin-right: 120rpx;
}

.left .left-img-box .active image{
  width: 125rpx;
}
.cur {
  transform: scale(1.2);
}

.bottom-box {
  width: 100%;
  position: relative;
}
.timer {
  width: 142rpx;
  height: 88rpx;
  position: absolute;
  right: 0;
  top: 34rpx;
  box-sizing: border-box;
  text-align: center;
  /* background-color: #671A13; */
  transform: rotate(90deg);
  background-size: 100%;
  background-repeat: no-repeat;
  
}
.toptime {
  font-size: 14px;
  font-weight: 700;
  color: #FFD23D;
}
.bottom-text {
  font-size: 9px;
  color: #E7C079;
}