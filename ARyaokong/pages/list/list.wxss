/* pages/list/list.wxss */
.container {
  height:100%;
  width:100%;
  background-size:100% 100%;
  position:relative;
  box-sizing:border-box;
  overflow:hidden;
  padding: 14rpx 13rpx 0 14rpx;
}
/* .container-position {
  padding:0 8rpx 140rpx 8rpx;
} */
.swiper image{
  display: block;
  width: 700rpx;
}
.list_header{
  width: 100%;
  background-size: 100%;
  overflow: hidden;
  color: #9E330E;
  height: 135rpx;
  box-sizing: border-box;

}
.list_banner{
  padding: 12rpx;
  box-sizing: border-box;
  width: 723rpx;
  height: 417rpx;
  background-size: 100%;
}
.list_header_left{
  float: left;
  width: 30%;
  /* margin: 20rpx 0 20rpx 20rpx; */
  text-align: center;
  overflow:hidden; 
  text-overflow:ellipsis;
  word-break:break-all;
  display:-webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;
}
.list_header_left .left_time {
    font-size: 23px;
    line-height: 68rpx;
}
.list_header_left .left-word {
    font-size: 20rpx;

}

.list_header_right{
  float: right;
  width: 70%;
  /* text-align: center; */
  font-size: 24rpx;
  /* height: 124rpx; */
  line-height: 36rpx;
  padding: 20rpx 30rpx 0 30rpx;
  box-sizing: border-box;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
/* .list_header_right .iconimg {
  width: 33rpx;
  height: 34rpx;
  vertical-align:middle;
} */
.list_body{
  padding: 0 35rpx;
  height: 46%;
  position: relative;
  box-sizing: border-box;
}

.scroll-box{
  height: 100%;
  overflow: hidden;
  overflow-y: hidden;
  text-align: center;
}

.box-item{
  position: relative;
  background-size: 100% 100%;
  margin-bottom: 10rpx;
}
.user_img{
  box-sizing: border-box;
  padding: 6rpx 10rpx 4rpx 10rpx;
}
.chose_btn{
  position:absolute;
  z-index:4;
  bottom:0;
  right:0;
  /* width:110rpx;
  height:110rpx; */
}
.curbg {
  width: 84rpx;
  height: 91rpx;
  position: absolute;
  bottom: 0;
  right: 0;
  z-index: 9;
}
.select_btn{
  position:absolute;
  z-index:11;
  bottom:20rpx;
  right:3rpx;
  width:76rpx;
  height:72rpx;
}


.list_footer{
  position: fixed;
  left: 50%;
  bottom: 0;
  width: 333rpx;
  transform: translateX(-50%);
  /* height: 150rpx; */
  background-size: 100% 100%;
  padding: 10rpx 30rpx 0 30rpx;
  box-sizing: border-box;
  overflow: hidden;
  color: #fff;
  font-size: 34rpx;
  text-align: center;
  z-index: 222;
}
.list_footer_save{
  height:96rpx;
  line-height: 96rpx;
  font-size: 34rpx;
  color: #fff;
  background-size:100% 100%;
}
.list_footer_btn {
  height:96rpx;
  line-height: 96rpx;
  font-size: 34rpx;
  color: #fff;
  background-size:100% 100%;
}
.list_footer_share{
  width: 49%;
  height:130rpx;
  line-height: 110rpx;
  background-size:100% 100%;
  float:right;
}

.saveImgMask {
  width: 100%;
  height: 108rpx;
  /* background-color: rebeccapurple; */
  background-repeat: no-repeat;
  background-position: center;
  background-size: 140%;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 18;
}

::-webkit-scrollbar{

width: 0;

height: 0;

color: transparent;

}
/* 去除button默认样式 */
button::after{
border:none;
}
input{
outline:none;
border:none;
list-style: none;
}

.listmask {
  width: 410rpx;
  height: 450rpx;
  /* border: 1px solid #ccc; */
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  font-weight: 400;
  text-align: center;
  color: #9D420E;
}
.listmask .masktxt-top {
  margin-top: 50rpx;
  font-size: 46rpx;
  line-height: 100rpx;
}
.listmask .masktxt-bot {
  margin-bottom: 49rpx;
  font-size: 36rpx;
}
.listmask .maskImg {
  width: 339rpx;
  height: 112rpx;
  margin: 0 auto;
}
.listmask .maskImg image {
  width: 100%;
  height: 100%;
}