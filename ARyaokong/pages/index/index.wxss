/**index.wxss**/
page{
  height: 100%;
}
.container {
  /* padding: 0 20rpx; */
  box-sizing: border-box;
}
.index_header {
  width: 100%;
  height: 550rpx;
  position: relative;
  background-size: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
  overflow: hidden;
}
.index_header .title {
  font-size: 18px;
  font-weight: 500;
  text-align: center;
  position: absolute;
  top: 64rpx;
  left: 50%;
  transform: translateX(-50%);
  color: #F8D384;
}

.index_content {
  width: 582rpx;
  height: 584rpx;
  margin: 0 auto;
  border-radius: 50%;
  background-size: 100%;
  box-sizing: border-box;
  position: relative;
}

.scan {
  width: 273rpx;
  height: 273rpx;
  border-radius: 50%;
  /* background-color: #fff; */
  background-size: 100%;
  position: absolute;
  top:50%;
  left: 50%;
  transform: translateX(-50%) translateY(-50%)
}
.scan image {
  width: 96rpx;
  height: 153rpx;
  position: absolute;
  top:50%;
  left: 50%;
  transform: translateX(-50%) translateY(-50%);
  display: block;
}
.txt {
  font-size: 14px;
  text-align: center;
  line-height: 44rpx;
  color: #F9DF49;
  letter-spacing: 5rpx;
}

.swiper-box {
  width: 100%;
  height: 316rpx;
  padding: 0 10rpx;
  box-sizing: border-box;
  /* background-color: #fff; */
  position: absolute;
  top: 105rpx;
  left: 0
}

.swiper-content image{
  width: 335rpx;
  height: 413rpx;
}
