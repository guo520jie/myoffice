/* pages/control/control.wxss */
page{
  height: 100%;
}
.container {
  /* padding: 0 20rpx; */
  box-sizing: border-box;
}
.clearfix{
  height: 563rpx;
}
.index_header {
  width: 725rpx;
  height: 563rpx;
  position: relative;
  background-size: 100%;
  /* padding: 0 20rpx; */
  box-sizing: border-box;
  overflow: hidden;
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%)
}
.index_header .title {
  font-size: 18px;
  font-weight: 500;
  text-align: center;
  position: absolute;
  top: 64rpx;
  left: 50%;
  transform: translateX(-50%);
  color: #F8D384;
}

.index_header .timer {
  width: 233rpx;
  height: 116rpx;
  padding-top: 40rpx;
  box-sizing: border-box;
  text-align: center;
  position: absolute;
  left: 50%;
  bottom: 10rpx;
  transform: translateX(-50%);
  background-size: 100%;
  z-index: 222;
}
.index_header .timer .toptime {
  font-size: 17px;
  font-weight: 500;
  color: #FFD23D;
}

.index_content {
  width: 582rpx;
  height: 584rpx;
  margin: 0 auto;
  border-radius: 50%;
  background-size: 100%;
  box-sizing: border-box;
  position: relative;
}

.index_content .btn-img image{
  display: block;
  width: 176rpx;
  height: 385rpx;
  position: absolute;
  top: 102rpx;
}
.index_content .btn-img .left {
  left: 14rpx
}
.index_content .btn-img .right {
  right: 14rpx
}

.scan {
  width: 273rpx;
  height: 273rpx;
  border-radius: 50%;
  /* background-color: #fff; */
  background-size: 100%;
  position: absolute;
  top:50%;
  left: 50%;
  transform: translateX(-50%) translateY(-50%)
}
.scan image {
  width: 96rpx;
  height: 153rpx;
  position: absolute;
  top:50%;
  left: 50%;
  transform: translateX(-50%) translateY(-50%);
  display: block;
}
.txt {
  font-size: 12px;
  text-align: center;
  line-height: 44rpx;
  color: #F9DF49;
  letter-spacing: 5rpx;
}

.swiper-box {
  width: 100%;
  /* height: 400rpx; */
  padding: 0 10rpx;
  box-sizing: border-box;
  /* background-color: #fff; */
  position: absolute;
  top: 105rpx;
  left: 0
}

.swiper-content image{
  width: 335rpx;
  height: 413rpx;
}

.cur_img {
  width: 335rpx;
  height: 413rpx;
  position: absolute;
  top: 42rpx;
  left: 50%;
  transform: translateX(-50%)
}
.cur_img image {
  display: block;
  width: 100%;
  height: 100%;
}
.scan .active {
  width: 100%;
  height: 100%
}
/* 蒙层 */
.mask-swiper{
  width: 703rpx;
  height: 550rpx;
  background-color: rgba(0, 0, 0, .5);
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  z-index: 111;
}
.mask-swiper .mask-loading{
  width: 277rpx;
  height: 72rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%)
}