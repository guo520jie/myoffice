/* 页面样式 */
page {
  background-color: #eee;
}

/* 轮播图样式 */
.swiper-container {
  height: 380rpx;
}

.swiper-container .swiper-item,
.swiper-container image {
  width: 100%;
  height: 100%;
}

/* 九宫格演示 */
.grids {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  border-top: 1rpx solid #eee;
  border-left: 1rpx solid #eee;
  background-color: #fff;
}

.grids .grid-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 33.333333333%;
  height: 250rpx;
  border-right: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
  box-sizing: border-box;
}

.grids image {
  width: 60rpx;
  height: 60rpx;
}

.grids text {
  margin-top: 20rpx;
  font-size: 26rpx;
  color: #999;
}

/* 底部links */
.links {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
  margin: 20rpx 0;
  background-color: #fff;
}

.links image {
  width: 340rpx;
  height: 180rpx;
}