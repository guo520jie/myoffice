<!-- 1 轮播图 -->
<swiper class="swiper-container" indicator-dots="{{ true }}" indicator-active-color="#0f0" autoplay="{{ true }}">
  <swiper-item class="swiper-item" wx:for="{{ list }}" wx:key="id">
    <image src="{{ item.image }}" mode="aspectFill"></image>
  </swiper-item>
</swiper>

<!-- 2 九宫格菜单 -->
<view class="grids">
  <navigator class="grid-item" wx:for="{{ categories }}" wx:key="id" url="/pages/list/list?id={{ item.id }}">
    <image src="{{ item.icon }}"></image>
    <text>{{ item.name }}</text>
  </navigator>
</view>

<!-- 3 底部链接 -->
<view class="links">
  <image src="/assets/links/link-01.png"></image>
  <image src="/assets/links/link-02.png"></image>
</view>