.i-noticebar {
  display: flex;
  height: 72rpx;
  line-height: 72rpx;
  font-size: 14px;
  color: #f76a24;
  background-color: #fefcec;
  overflow: hidden;
  position: fixed;
  top: 0;
  left: 0;
}

.i-noticebar-icon {
  display: flex;
  margin-left: 10rpx;
  align-items: center;
}

.i-noticebar-icon+view {
  margin-left: 10rpx
}

.i-noticebar-operation {
  display: flex;
  margin-right: 16rpx;
  align-items: center
}

.i-noticebar-content-wrap {
  position: relative;
  flex: 1;
  margin: 0 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap
}

.i-noticebar-content-wrap .i-noticebar-content {
  position: absolute;
  top: 3rpx;
  transition-duration: 20s
}

.i-tag {
  margin: 0;
  border-radius: 50%;
  padding: 10rpx;
  background: #E60012;
  position: absolute;
  top: 6rpx;
  left: 37rpx;
  line-height: 16rpx;
  font-size: 28rpx;
  color: #fff;
}
