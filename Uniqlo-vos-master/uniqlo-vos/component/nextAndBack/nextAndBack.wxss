/* component/nextAndBack/nextAndBack.wxss */
.next-back-box {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 180rpx;
  width: 100vw;
  position: fixed !important;
  left: 0 !important;
  bottom: 0 !important;
  background: #fff;
}

.text-default {
  color: #EC0404;
  min-height: 60rpx !important;
  line-height: 60rpx !important;
}


.item {
  /* height: 45rpx; */
  display: flex;
  align-items: center;
  line-height: 60rpx;
  text-align: center;
  min-width: 120rpx;
  max-width: 150rpx;
  border-radius: 24rpx;
  -webkit-appearance: none;
}




/* ==================
          按钮
 ==================== */

.cu-btn {
  position: relative;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  padding: 0 10rpx;
  font-size: 28rpx;
  height: 30rpx;
  line-height: 1;
  text-align: center;
  text-decoration: none;
  overflow: visible;
  margin-left: initial;
  transform: translate(0rpx, 0rpx);
  margin-right: initial;
  border-radius: 24rpx;
  -webkit-appearance: none;
  background: #fff;
  width: 100%;
}

.cu-btn::after {
  display: none;
}


.cu-btn.button-hover {
  transform: translate(1rpx, 1rpx);
}

button:not([size='mini']) {
  width: 100%;
  margin-left: auto;
  margin-right: auto;
}

.mask {
  height: 100vh;
  width: 100%;
  line-height: 100vh;
  z-index: 9999;
  background: rgba(0, 0, 0, 0.5);
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  align-items: center;
  text-align: center;
  justify-content: center;
  color: #fff;
}


.microphone-box {
  border-radius: 50%;
  width: 160rpx;
  height: 160rpx;
  -webkit-appearance: none;
  position: absolute;
  top:-20rpx;
  left: 50%;
  margin-left: -80rpx;
}

.postion image {
  width: 130rpx;
  height: 130rpx;
}

.postion {
  width: 160rpx;
  height: 160rpx;
  background-color: rgba(230, 0, 18, 1);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  -webkit-appearance: none;

}
