/* pages/goalSetting/goalSetting.wxss */
.item-header {
  color: rgba(16, 16, 16, 1);
  font-size: 32rpx;
  font-weight: bold;
}

.body-title {
  margin-top: 40rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.item-body {
  width: 90%;
  margin: 0 auto;
}

.input-box {
  display: flex;
  align-items: center;
}

input {
  padding: 10rpx;
  box-sizing: border-box;
  width: 90%;
  height: 60rpx;
  border-radius: 4rpx;
  color: rgba(136, 136, 136, 1);
  font-size: 28rpx;
  text-align: left;
  border: 2rpx solid rgba(187, 187, 187, 1);
}

.item-body {
  width: 100%;
  height: 200px;
  border-radius: 6rpx;
  background-color: rgba(255, 255, 255, 0);
  color: rgba(16, 16, 16, 1);
  font-size: 28rpx;
  /* text-align: center; */
  box-shadow: 0px 4rpx 12rpx 0px rgba(0, 0, 0, 0.4);
  border: 2px solid rgba(255, 255, 255, 0);
  margin-bottom: 80rpx;
}
