.footer {
  width: 100%;
  height: 200rpx;
  position: fixed;
  bottom: 0;
  z-index: 1000;
  background: #fff;
}

.footerinner {
  height: 180rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 40rpx;
}

.toolbar .toolbar-item {
  width: 31%;
  margin: 0 auto;
  text-align: center;
}

.toolbar .toolbar-item i {
  font-size: 38px;
  width: 100%;
  display: block;
  text-align: center;
  color: #fff;
  line-height: 130%;
  background: linear-gradient(to right, #843590, #b570a9);
  border-radius: 60rpx;
  padding: 7rpx 0;
}

.footer .iconfont {
  /* font-size: 55rpx; */
  border-radius: 30rpx;
  border: 1rpx solid;
  display: block;
  width: 114rpx;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 8rpx;
  margin: 10rpx auto;
  text-align: center;
  position: absolute;
  left: 5%;
  top: 25%;
}

.footer .phone {
  margin: 0 auto;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  display: block;
  width: 200rpx;
  height: 80rpx;
  background: #a75fa2;
  text-align: center;
  line-height: 100rpx;
  border-radius: 50rpx;
  padding: 5rpx 0;
  color: #fff;
  font-size: 80rpx;
}

.next {
  position: absolute;
  right: 5%;
  border: 1rpx solid #8b3e93;
  text-align: center;
  color: #8b3e93;
  margin-top: 5rpx;
  padding: 0 26rpx;
  font-size: 26rpx;
  border-radius: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.footer .phone image {
  width: 50% !important;
  height: 80rpx;
}



.tagInput {
  border: 1px solid #ddd;
  max-width: 100rpx;
  border-radius: 10rpx;
  font-size: 20rpx;
}





