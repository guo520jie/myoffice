/* pages/globalDetails/globalDetails.wxss */



.content-box {
  margin-top: 40rpx;
  font-size: 28rpx;
  color: #101010;
  width: 100%;
}

.content-box>image {
  width: 80%;
  margin-bottom: 50rpx;
}

.question-list-box {
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
  margin: 40rpx auto;
  font-size: 26rpx;
  padding-bottom: 230rpx;
}

.radio-group {
  display: flex;
  flex-flow: column nowrap;
  align-items: flex-start;
  justify-content: start;

}


.title {
  font-size: 28rpx;
  padding-bottom: 20rpx;
  display: inline-block;
  margin: 20rpx 0;
  color: #747272;
}

.voice-block {
  margin-top: 30rpx;
  box-sizing: border-box;
  /* margin: 0 auto; */
  display: flex;
  justify-content: center;
}

.good-details-box {
  position: relative;
  height: 100%;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: space-between;
  margin: 30rpx 0;
}

.good-img {
  width: 300rpx;
  height: 300rpx;
  margin-right: 20rpx;
}

.good-details view {
  margin: 5rpx 0;
  font-size: 28rpx;
  width: 370rpx;
    /* text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  */
}


.item {
  width: 600rpx;
  min-height: 88rpx;
  padding: 20rpx 0rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-radius: 4rpx;
  color: #000;
  background-color: #fff;
  font-size: 28rpx;
  margin: 20rpx 0;
  box-shadow: 0px 4rpx 12rpx 0px rgba(0, 0, 0, 0.4);
  border: 2rpx solid rgba(255, 255, 255, 0);
}

.actionItem {
  color: #fff;
  background-color: #E60012;
}

.radio {
  width: 600rpx;
}

.padding-lr {
  width: 100%;
}

.my-scroll {
  height: calc(100vh - 650rpx);
  overflow: hidden;
}

.container{
  margin-top: 100rpx;
}
