/* pages/globalQuestion/globalQuestion.wxss */
.header-box {
  width: 100%;
  display: flex;
  justify-content: flex-end;
  height: 40rpx;

}

.header-box image {
  height: 80rpx;
  width: 80rpx;

}

.good-img-box {
  height: 200rpx !important;
  width: 200rpx !important;
}


.body-box {
  padding-bottom: 250rpx;
}

.title {
  font-size: 32rpx;

}

.title-msg {
  color: rgba(152, 152, 157, 1);
  font-size: 28rpx;
}

.bottom-box {
  margin-top: 40rpx;
}

.scanning-box {
  margin-top: 40rpx;
}

.scanning-img {
  display: flex;
  justify-content: center;
  align-items: center;
}

.introduce {
  height: 180rpx;
  width: 130rpx;
  margin-right: 80rpx;
}

.scanning {
  height: 170rpx;
  width: 170rpx;
}

.scanning-msg {
  color: rgba(152, 152, 157, 1);
  font-size: 24rpx;
  text-align: center;
  margin-top: 40rpx;
}


.good-details-box {
  position: relative;
  margin: 30rpx 0;
  height: 100%;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
}

.del {
  position: absolute;
  bottom: 0rpx;
  right: 160rpx;
  width: 40rpx;
  height: 40rpx;
}

.good-img {
  width: 200rpx;
  height: 200rpx;
}

.good-details view {
  margin: 5rpx 0;
  font-size: 24rpx;
  width: 370rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.scanning-sm {
  height: 96rpx;
  width: 96rpx;
}

.new-scan {
  color: rgba(191, 189, 189, 1);
  font-size: 24rpx;
  text-align: center;
  margin-top: 10rpx;
}

.question-list-box {
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
  margin: 40rpx auto;
  font-size: 26rpx;
}

.radio-group {
  display: flex;
  flex-flow: column nowrap;
  align-items: flex-start;
  justify-content: start;

}

.item {
  width: 600rpx;
  min-height: 88rpx;
  padding: 20rpx 0rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-radius: 4rpx;
  color: #000;
  background-color: #fff;
  font-size: 28rpx;
  margin: 20rpx 0;
  box-shadow: 0px 4rpx 12rpx 0px rgba(0, 0, 0, 0.4);
  border: 2rpx solid rgba(255, 255, 255, 0);
}

.actionItem {
  color: #fff;
  background-color: #E60012;
}

.radio {
  width: 600rpx;
}

.voice-block {
  margin-top: 30rpx;
  /* box-sizing: border-box; */
  /* margin: 0 auto; */
  display: flex;
  justify-content: center;
}

.my-scroll {
  height: calc(100vh - 400rpx);
  overflow: hidden;
}

.input-box {
  width: 95%;
  padding: 10rpx 20rpx;
  background-color: rgba(248, 248, 248, 1);
  color: rgba(16, 16, 16, 1);
  font-size: 28rpx;
  border: 2rpx solid rgba(255, 0, 0, 0);
  height: 70rpx;
}
