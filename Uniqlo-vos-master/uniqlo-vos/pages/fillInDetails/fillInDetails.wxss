/* pages/fillInDetails/fillInDetails.wxss */
.item-header {
  color: rgba(16, 16, 16, 1);
  font-size: 32rpx;
  font-weight: bold;
}

.body-title {
  margin-top: 40rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.item-body {
  margin: 0 auto;
}

.flex-center {
  width: 94%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 0 auto;

}

.item-body {
  width: 100%;
  min-height: 200px;
  height: 100%;
  border-radius: 6rpx;
  background-color: rgba(255, 255, 255, 0);
  color: rgba(16, 16, 16, 1);
  font-size: 28rpx;
  /* text-align: center; */
  box-shadow: 0px 4rpx 12rpx 0px rgba(0, 0, 0, 0.4);
  border: 2px solid rgba(255, 255, 255, 0);
  margin-bottom: 80rpx;
}

.user-list-box {
  display: flex;
  flex-flow: row wrap;
  align-items: center;
}

.user-list {
  display: flex;
  align-items: center;
}

.user-list image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
