/* ==================
          按钮
 ==================== */

.cu-btn {
  position: relative;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  padding: 0 10rpx;
  font-size: 28rpx;
  height: 30rpx;
  line-height: 1;
  text-align: center;
  text-decoration: none;
  overflow: visible;
  margin-left: initial;
  transform: translate(0rpx, 0rpx);
  margin-right: initial;
  border-radius: 24rpx;
  -webkit-appearance: none;
  background: #fff;
  width: 100%;
}

.cu-btn::after {
  display: none;
}


.cu-btn.button-hover {
  transform: translate(1rpx, 1rpx);
}

button:not([size='mini']) {
  width: 100%;
  margin-left: auto;
  margin-right: auto;
}

.mask {
  height: 100vh;
  width: 100%;
  line-height: 100vh;
  z-index: 99;
  background: rgba(0, 0, 0, 0.5);
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  align-items: center;
  text-align: center;
  justify-content: center;
  color: #fff;
}


.microphone-box {
